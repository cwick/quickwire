{
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "qw",
    "types": ["./types.d.ts"]
  },
  "tasks": {
    "install": "deno install -n qw --force --allow-read --allow-run file://$(pwd)/src/platform/deno/cli.ts -- __BOOTSTRAP__",
    "uninstall": "deno uninstall qw",
    "test": "deno test --allow-read --allow-write --allow-run src",
    "update-snapshots": "deno task test -- --update"
  },
  "imports": {
    "deno-std/": "https://deno.land/std@0.224.0/",
    "qw/jsx-runtime": "./src/core/jsx.ts"
  }
}
